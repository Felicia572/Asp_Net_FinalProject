﻿@model IEnumerable<Asp_Net_FinalProject.Models.User>

<title>會員管理</title>

<!-- ======= Breadcrumbs ======= -->
<div class="breadcrumbs">
    <div class="page-header d-flex align-items-center" style="background-image: url('');">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 text-center">
                    <h2>會員管理</h2>
                    <p>
                        作為會員管理者，職責包括：
                        <br />
                        <br />
                        管理用戶帳戶、設定訪問權限、處理投訴與舉報、審核和管理内容
                    </p>
                </div>
            </div>
        </div>
    </div>
    <nav>
        <div class="container">
            <ol>
                <li>@Html.ActionLink("首頁", "Index", "Home")</li>
                <li>會員管理</li>
            </ol>
        </div>
    </nav>
</div>
<div class="container">


    @*<p>
        @Html.ActionLink("建立新帳號", "Create")
    </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Role.Role_Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registration_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User_Role.Role_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>