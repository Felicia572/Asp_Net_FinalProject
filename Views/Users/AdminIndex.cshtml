@model IEnumerable<Asp_Net_FinalProject.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>

<p>
    @Html.ActionLink("Login", "Login")
</p>

<p>
    @Html.ActionLink("Create", "Create")
</p>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Registration_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Role.Role_Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Registration_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Role.Role_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

